{
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react-jsx",
    "declaration": true, 
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true 
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ]
}
